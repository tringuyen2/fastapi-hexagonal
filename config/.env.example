# Application
APP_NAME=Event Manager
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Database Selection (sqlite, mongodb, postgresql)
DATABASE_TYPE=sqlite

# SQLite (default, no additional config needed)
# Uses in-memory storage for testing

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=event_manager

# PostgreSQL Configuration  
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=event_manager
PG_USERNAME=postgres
PG_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=event-manager
KAFKA_AUTO_OFFSET_RESET=latest

# External Services
EMAIL_SERVICE_API_KEY=your_email_service_api_key
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_api_key
PAYMENT_GATEWAY_URL=https://api.payment-provider.com